@* File: Views/Admin/Home.cshtml *@
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Admin Dashboard";
}

@section Header {
    @await Html.PartialAsync("_Header")
}

<div class="container mt-5 text-center">
    <h1 class="mb-4">Admin Dashboard</h1>
    <div class="row justify-content-center">
        <div class="col-md-4">
            <button class="btn-invite btn-lg w-100" onclick="location.href='@Url.Action("Task", "Admin")'">
                Task Management
            </button>
        </div>
        <div class="col-md-4">
            <button class="btn-invite btn-lg w-100" onclick="location.href='@Url.Action("User", "Admin")'">
                User Management
            </button>
        </div>
    </div>
</div>
