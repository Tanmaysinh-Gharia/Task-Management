@model List<TaskManagement.Core.ViewModels.TaskManagement.TaskDetailViewModel>

<div class="drawer" id="drawerTaskHistory">
    <div class="overlay" onclick="Common.closeDrawer('#drawerTaskHistory')"></div>

    <div class="drawer-inner">
        <div class="drawer-title">
            <a title="Back" onclick="Common.closeDrawer('#drawerTaskHistory')">
                <i class="nt-angle-prev"></i>
            </a>
            <h1>Task History</h1>
        </div>

        <div class="drawer-form view-drawer">
            <div class="row">
                <div class="form-title">Change Logs</div>

                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <div class="col-lg-12 form-floating data-detail">
                            <div class="form-label">
                                <strong> @( @item.FieldName != "Created" ?  "Changed Field:" : "")  @item.FieldName</strong>
                                <span class="text-muted"> (Updated by: @item.UpdatedBy on @item.ChangeTime.ToString("g"))</span>
                            </div>
                            <div class="data-val">
                                <span class="text-muted">Old: @item.OldValue</span><br />
                                <span>New: @item.NewValue</span>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-lg-12 form-floating data-detail">
                        <div class="data-val text-muted">No history found for this task.</div>
                    </div>
                }
            </div>

            <div class="invite-botttom">
                <a class="cancel" onclick="Common.closeDrawer('#drawerTaskHistory')">
                    <i class="nt-backward"></i> Close
                </a>
            </div>
        </div>
    </div>
</div>
